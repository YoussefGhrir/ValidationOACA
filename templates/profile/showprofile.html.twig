{# templates/profile/show.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="text-center">
                    <img src="{{ asset('design/images/user-icon.png') }}" class="logo-icon" alt="User Icon"
                         style="width: 100px; height: 100px; border-radius: 30%; margin-bottom: 20px;">
                </div>
                <h2 class="text-center">Profile</h2>

                <div class="card mt-4" style="max-width: 800px; border: 1px solid #ddd; border-radius: 15px;">
                    <div class="card-body" style="font-size: 1.2rem; padding: 2rem; text-align: center;">
                        <p style="margin-bottom: 1.5rem;"><strong> {{ user.firstName }}</strong></p>
                        <p style="margin-bottom: 1.5rem;"><strong> {{ user.lastName }}</strong></p>
                        <p style="margin-bottom: 1.5rem;"><strong> {{ user.email }}</strong></p>
                        <!-- Password should not be displayed for security reasons -->
                        <a href="{{ path('profile_edit') }}" class="btn btn-primary" style="font-size: 1.2rem;">Modifier</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
