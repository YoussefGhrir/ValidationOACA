{% extends 'base.html.twig' %}

{% block body %}
    <main id="main" class="main">
        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card shadow-lg p-3 mb-5 bg-light rounded">
                        <div class="card-body">
                            <!-- Card Title -->
                            <h5 class="card-title text-center mb-4" style="color: #6A5ACD; font-weight: bold;">Liste des Pilotes ATPL</h5>

                            <!-- Table -->
                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-bordered">
                                    <thead style="background-color: #6A5ACD; color: white;">
                                    <tr>
                                        <th scope="col">Numéro</th>
                                        <th scope="col">Nom</th>
                                        <th scope="col">Prénom</th>
                                        <th scope="col">Fonction</th>
                                        <th scope="col">Pays</th>
                                        <th scope="col">1ère validation</th>
                                        <th scope="col">Délivrée le</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for pilote in pilotes %}
                                        <tr>
                                            <td>{{ pilote.numero }}</td>
                                            <td>{{ pilote.nom }}</td>
                                            <td>{{ pilote.prenom }}</td>
                                            <td>{{ pilote.fonction }}</td>
                                            <td>{{ pilote.pays }}</td>
                                            <td>{{ pilote.firstdate|date('d/m/Y') }}</td>
                                            <td>{{ pilote.validite|date('d/m/Y') }}</td>
                                            <td>
                                                <a href="{{ path('app_pilote_show', {'id': pilote.id}) }}" class="btn btn-outline-info btn-sm">
                                                    <i class="bi bi-eye"></i> Voir plus
                                                </a>
                                                <a href="{{ path('app_pilote_edit', {'id': pilote.id}) }}" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-pencil-square"></i> Modifier
                                                </a>
                                                <a href="{{ path('app_pilote_delete', {'id': pilote.id}) }}" class="btn btn-outline-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce pilote ?')">
                                                    <i class="bi bi-trash"></i> Supprimer
                                                </a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="10" class="text-center">Aucun pilote ATPL trouvé</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
