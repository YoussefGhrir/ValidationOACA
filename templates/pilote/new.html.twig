{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('design/css/custom.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
    <style>
        .alert {
            transition: opacity 1s ease-out;
        }
        .is-invalid {
            border-color: #dc3545;
        }
        .invalid-feedback {
            color: #dc3545;
        }
    </style>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <!-- Affichage des messages flash -->
                {% for label, messages in app.flashes %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show flash-message" role="alert">
                        {% for message in messages %}
                            {{ message }}
                        {% endfor %}
                    </div>
                {% endfor %}

                <div class="card mt-4">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                <!-- Form Fields in Left Column -->
                                <div class="form-group mb-3 custom-radio-group">
                                    {{ form_label(form.type) }}
                                    {{ form_widget(form.type, {
                                        'attr': {'class': 'form-control form-control-custom ' ~ (form.type.vars.errors|length > 0 ? 'is-invalid' : '')}
                                    }) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.type) }}
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    {{ form_label(form.numero) }}
                                    {{ form_widget(form.numero, {
                                        'attr': {'class': 'form-control form-control-custom ' ~ (form.numero.vars.errors|length > 0 ? 'is-invalid' : '')}
                                    }) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.numero) }}
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    {{ form_label(form.fonction) }}
                                    {{ form_widget(form.fonction, {
                                        'attr': {'class': 'form-control form-control-custom ' ~ (form.fonction.vars.errors|length > 0 ? 'is-invalid' : '')}
                                    }) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.fonction) }}
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    {{ form_label(form.nom) }}
                                    {{ form_widget(form.nom, {
                                        'attr': {'class': 'form-control form-control-custom ' ~ (form.nom.vars.errors|length > 0 ? 'is-invalid' : '')}
                                    }) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.nom) }}
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    {{ form_label(form.prenom) }}
