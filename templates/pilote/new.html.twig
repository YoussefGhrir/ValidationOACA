                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    {{ form_label(form.privilegeag) }}
                                    {{ form_widget(form.privilegeag, {
                                        'attr': {'class': 'form-control form-control-custom ' ~ (form.privilegeag.vars.errors|length > 0 ? 'is-invalid' : '')}
                                    }) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.privilegeag) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-plus"></i> Créer
                            </button>
                            <a href="{{ path('app_home') }}" class="btn btn-warning btn-lg">
                                <i class="fas fa-home"></i> Retour à la page d'accueil
                            </a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            flatpickr(".datepicker", {
                dateFormat: "Y-m-d",
                allowInput: true,
                clickOpens: true
            });
        });
    </script>
{% endblock %}
