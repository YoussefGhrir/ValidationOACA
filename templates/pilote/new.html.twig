                                    }) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.privilegefr) }}
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <!-- Form Fields in Right Column -->
                                <div class="form-group mb-3">
                                    {{ form_label(form.nationalite) }}
