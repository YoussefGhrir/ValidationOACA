                                        'attr': {'class': 'form-control form-control-custom ' ~ (form.prenom.vars.errors|length > 0 ? 'is-invalid' : '')}
                                    }) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.prenom) }}
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    {{ form_label(form.datebirth) }}
                                    {{ form_widget(form.datebirth, {
                                        'attr': {'class': 'form-control datepicker form-control-custom ' ~ (form.datebirth.vars.errors|length > 0 ? 'is-invalid' : '')}
                                    }) }}
                                    <div class="invalid-feedback">
