{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('design/css/custom.css') }}">
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <!-- Display flash messages -->
                {% for label, messages in app.flashes %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show flash-message" role="alert">
                        {% for message in messages %}
                            {{ message }}
                        {% endfor %}
                    </div>
                {% endfor %}

                <div class="card mt-4">
                    <div class="card-body">
                        <h1>Edit User</h1>
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                <!-- Form Fields in Left Column -->
                                <div class="form-group mb-3">
                                    {{ form_row(form.firstName, {'label': 'Prénom', 'attr': {'class': 'form-control form-control-custom'}}) }}
                                </div>
                                <div class="form-group mb-3">
                                    {{ form_row(form.lastName, {'label': 'Nom de famille', 'attr': {'class': 'form-control form-control-custom'}}) }}
                                </div>
                                <div class="form-group mb-3">
                                    {{ form_row(form.email, {'label': 'Adresse e-mail', 'attr': {'class': 'form-control form-control-custom'}}) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                <!-- Form Fields in Right Column -->
                                <div class="form-group mb-3">
                                    {{ form_row(form.password.first, {'label': 'Nouveau mot de passe', 'attr': {'class': 'form-control form-control-custom'}}) }}
                                </div>
                                <div class="form-group mb-3">
                                    {{ form_row(form.password.second, {'label': 'Confirmer le mot de passe', 'attr': {'class': 'form-control form-control-custom'}}) }}
                                </div>

                                <!-- Roles selection field -->
                                <div class="form-group mb-3 custom-radio-group">
                                    {{ form_row(form.roles, {
                                        'label': 'Choisir les rôles',
                                        'attr': {'class': 'form-control form-control-custom'}
                                    }) }}
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col d-flex justify-content-between">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fas fa-save"></i> Save changes
                                </button>
                                <a href="{{ path('user_list') }}" class="btn btn-warning btn-lg">
                                    <i class="fas fa-arrow-left"></i> Back to user list
                                </a>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
