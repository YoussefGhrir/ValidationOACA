{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <main id="main" class="main">
        <section class="section">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card shadow-lg p-4 mb-5 bg-blue rounded">
                        <div class="card-body">
                            <!-- Card Title -->
                            <h5 class="card-title text-center mb-4" style="color: #FFEBCD; font-weight: bold;">
                                INFORMATIONS DE L'UTILISATEUR
                            </h5>

                            <!-- Single Table for All User Info -->
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <tbody>
                                    <tr>
                                        <th scope="row">Prénom</th>
                                        <td>{{ user.firstname }}</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Nom</th>
                                        <td>{{ user.lastname }}</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Email</th>
                                        <td>{{ user.email }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Bottom Row: Buttons Aligned with Equal Spacing -->
                            <div class="row mt-4">
                                <div class="col-12 d-flex justify-content-between">
                                    <a href="{{ path('user_list') }}" class="btn btn-warning btn-lg">
                                        <i class="fas fa-arrow-left"></i> Retour à la liste
                                    </a>
                                    <a href="{{ path('user_edit', {'id': user.id}) }}"
                                       class="btn btn-secondary btn-lg">
                                        <i class="bi bi-pencil-square"></i> Modifier
                                    </a>
                                    <form action="{{ path('user_delete', {'id': user.id}) }}" method="post"
                                          style="display:inline;">
                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button type="submit" class="btn btn-danger btn-lg"
                                                onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <!-- End Button Row -->
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main><!-- End #main -->
{% endblock %}
